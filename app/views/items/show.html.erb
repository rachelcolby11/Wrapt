<h2><%= @item.name %></h2>

<p>
  <strong>Size:</strong>
  <%= @item.size %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @item.notes %>
</p>

<p>
  <strong>For:</strong>
  <%= @item.user.name %>
</p>

<% unless current_user == @item.user %>
  <%= render partial: 'claims/claim', locals: {item: @item, user: current_user } %>
<% end %>
<br>

<% if policy(@item).edit? %>

  <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-success' %> 
  <%= link_to 'Delete', @item, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }  %>
  <%= link_to restrictions_item_path(@item.id), class: 'btn btn-danger' do %><i class="glyphicon glyphicon-eye-close"></i>&nbsp; Restrict<% end %>

    <% if current_user.user_profile %>
      <%= link_to "Back to Profile", user_path(current_user), class: 'btn btn-success' %>
    <% end %>
    
<% end %>
