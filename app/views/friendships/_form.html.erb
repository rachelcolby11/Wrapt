<div class="text-center">
<h3>Add a Friend!</h3>

<%= form_for(Friendship.new) do |f| %>
  <div class="form-group">
    <label>Friend's email:</label><br>
    <%= text_field_tag :email %>
  </div>

  <div class="form-group">
    <%= f.submit "Add", class: 'btn btn-success' %>
  </div>
  <p>Friends you add here will be able to see your gift list. If you would like to see someone's gift list, ask them to add you as a friend.</p>
<% end %>
</div>