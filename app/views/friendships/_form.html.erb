<div class="text-center">
<h3>Add a Friend!</h3>

<%= form_for(Friendship.new) do |f| %>
  <div class="form-group">
    <label>Friend's email:</label><br>
    <%= text_field_tag :email %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
</div>